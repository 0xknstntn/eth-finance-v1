<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Click Game</title>
    <style>
        body {
            text-align: center;
            font-family: 'Arial', sans-serif;
            margin: 50px;
        }

        #score {
            font-size: 24px;
            margin-bottom: 20px;
        }

        #clickButton {
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <h1>Simple Click Game</h1>
    
    <p id="score">Score: <span id="scoreValue">0</span></p>
    
    <button id="clickButton" onclick="incrementScore()">Click Me!</button>

    <script>
        // 初期スコア
        let score = 0;

        // スコアを増加させる関数
        function incrementScore() {
            score++;
            document.getElementById('scoreValue').textContent = score;
        }
    </script>

</body>
</html>
